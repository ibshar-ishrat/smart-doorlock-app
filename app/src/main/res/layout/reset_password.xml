<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="New Password"
        android:id="@+id/textView_newpas_reset"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/textView_Reset"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText_newpass_reset"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/textView_newpas_reset"
        android:layout_alignLeft="@+id/textView_newpas_reset"

        android:layout_centerHorizontal="true"
        android:layout_marginRight="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Confirm Password"
        android:id="@+id/textView_confpass_reset"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/editText_newpass_reset"
        android:layout_alignStart="@+id/editText_newpass_reset" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText_confpas_reset"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/textView_confpass_reset"
        android:layout_alignLeft="@+id/editText_newpass_reset"
        android:layout_alignStart="@+id/editText_newpass_reset"
        android:gravity="center_vertical"
        android:layout_marginRight="100dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/button_submit"
        android:layout_below="@+id/editText_confpas_reset"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Reset Password"
        android:id="@+id/textView_Reset"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="100dp"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp"
        android:textStyle="bold" />

</RelativeLayout>