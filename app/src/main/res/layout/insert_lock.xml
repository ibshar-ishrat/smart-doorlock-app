<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_insertdoor"
        android:layout_alignParentTop="true"
        android:text="Insert Door"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/material_blue_grey_800"/>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:ems="10"
        android:id="@+id/editText_pin_id"
        android:password="true"
        android:layout_below="@+id/textView_pin_id"
        android:layout_alignLeft="@+id/textView_pin_id"
        android:layout_alignStart="@+id/textView_pin_id" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Confirm Pin Code"
        android:id="@+id/textview_confirmpin_id"
        android:layout_below="@+id/editText_pin_id"
        android:layout_alignLeft="@+id/editText_pin_id"
        android:layout_alignStart="@+id/editText_pin_id" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:ems="10"
        android:id="@+id/editText_confirmpin_id"
        android:password="true"
        android:layout_below="@+id/textview_confirmpin_id"
        android:layout_alignLeft="@+id/textview_confirmpin_id"
        android:layout_alignStart="@+id/textview_confirmpin_id" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name Door"
        android:id="@+id/textView_nameDoor_id"
        android:layout_below="@+id/editText_confirmpin_id"
        android:layout_alignLeft="@+id/editText_confirmpin_id"
        android:layout_alignStart="@+id/editText_confirmpin_id" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/editText_nameDoor_id"
        android:layout_below="@+id/textView_nameDoor_id"
        android:layout_alignLeft="@+id/textView_nameDoor_id"
        android:layout_alignStart="@+id/textView_nameDoor_id" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Description of Door"
        android:id="@+id/textView_desc_Door_id"
        android:layout_below="@+id/editText_nameDoor_id"
        android:layout_alignLeft="@+id/editText_nameDoor_id"
        android:layout_alignStart="@+id/editText_nameDoor_id" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/editText_desc_Door_id"
        android:layout_below="@+id/textView_desc_Door_id"
        android:layout_alignLeft="@+id/textView_desc_Door_id"
        android:layout_alignStart="@+id/textView_desc_Door_id" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/button_next_id"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="66dp"
        android:onClick="Goto_InsertDoor2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter Pin Code"
        android:id="@+id/textView_pin_id"
        android:layout_below="@+id/editText_insertdoor"
        android:layout_alignRight="@+id/button_next_id"
        android:layout_alignEnd="@+id/button_next_id"
        android:layout_marginTop="50dp" />


</RelativeLayout>