<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Fragment_Tab_Door_Status"
    android:orientation="vertical">


    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2">


    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="200dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp" />

    <TextView android:id="@+id/textView_Label_Door_Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="Door Status:"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView  android:id="@+id/textview_Door_Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conencting..."
        android:textSize="25sp"
        android:layout_alignBaseline="@+id/textView_Label_Door_Status"
        android:layout_alignBottom="@+id/textView_Label_Door_Status"
        android:layout_toRightOf="@+id/textView_Label_Door_Status"
        android:layout_toEndOf="@+id/textView_Label_Door_Status"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignRight="@+id/textview_Door_Status"
        android:layout_alignEnd="@+id/textview_Door_Status">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Door UnLock"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/textView"
            android:layout_gravity="center_vertical" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

    </LinearLayout>

    <Button
        android:text="Door Information"
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_Door_Info"
        android:layout_marginTop="86dp"
        android:layout_below="@+id/textview_Door_Status"
        android:layout_centerHorizontal="true" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Led1"
        android:singleLine="false"
        android:layout_gravity="right"
        android:layout_alignBottom="@+id/linearLayout"
        android:layout_alignLeft="@+id/textview_Door_Status"
        android:layout_alignStart="@+id/textview_Door_Status" />


</RelativeLayout>


